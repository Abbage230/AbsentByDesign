{
  "multipart": [
    {   "when": { "up": "true" },
      "apply": { "model": "absentbydesign:wall_stone_slab_post" }
    },
    {   "when": { "north": "true" },
      "apply": { "model": "absentbydesign:wall_stone_slab_side", "uvlock": true }
    },
    {   "when": { "east": "true" },
      "apply": { "model": "absentbydesign:wall_stone_slab_side", "y": 90, "uvlock": true }
    },
    {   "when": { "south": "true" },
      "apply": { "model": "absentbydesign:wall_stone_slab_side", "y": 180, "uvlock": true }
    },
    {   "when": { "west": "true" },
      "apply": { "model": "absentbydesign:wall_stone_slab_side", "y": 270, "uvlock": true }
    }
  ]
